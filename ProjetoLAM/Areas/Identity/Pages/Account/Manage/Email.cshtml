@page
@model EmailModel
@{
    ViewData["Title"] = "Gerenciar E-mail";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container mt-4">
    <h3 class="text-primary fw-bold mb-4">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="form-floating mb-3 input-group">
                            <input asp-for="Email" class="form-control rounded-start-3" placeholder="Seu e-mail atual" disabled />
                            <div class="input-group-append">
                                <span class="input-group-text text-success fw-bold bg-light rounded-end-3">✓</span>
                            </div>
                            <label asp-for="Email" class="form-label">E-mail atual</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control rounded-3" placeholder="Seu e-mail atual" disabled />
                            <label asp-for="Email" class="form-label">E-mail atual</label>
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link text-decoration-none p-0 mt-2">
                                Enviar e-mail de verificação
                            </button>
                        </div>
                    }

                    <div class="form-floating mb-4">
                        <input asp-for="Input.NewEmail" class="form-control rounded-3" autocomplete="email" aria-required="true" placeholder="Digite o novo e-mail" />
                        <label asp-for="Input.NewEmail" class="form-label">Novo e-mail</label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>

                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary rounded-3 shadow-sm">
                        <i class="bi bi-envelope-check-fill me-2"></i> Alterar e-mail
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
