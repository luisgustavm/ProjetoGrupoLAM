@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container mt-4">
    <h3 class="text-primary fw-bold mb-4">@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="Digite sua senha atual" />
                        <label asp-for="Input.OldPassword" class="form-label">Senha atual</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="Digite sua nova senha" />
                        <label asp-for="Input.NewPassword" class="form-label">Nova senha</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="Confirme sua nova senha" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar nova senha</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-primary rounded-3 shadow-sm">
                        <i class="bi bi-lock-fill me-2"></i> Atualizar senha
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
