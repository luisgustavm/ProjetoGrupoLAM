@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav flex-column p-3 rounded-3 shadow-sm manage-nav">
    <li class="nav-item mb-2">
        <a class="nav-link fw-semibold @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="bi bi-person-fill me-2"></i> Meu Perfil
        </a>
    </li>

    <li class="nav-item mb-2">
        <a class="nav-link fw-semibold @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
            <i class="bi bi-envelope-fill me-2"></i> E-mail
        </a>
    </li>

    <li class="nav-item mb-2">
        <a class="nav-link fw-semibold @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="bi bi-lock-fill me-2"></i> Alterar Senha
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li class="nav-item mb-2">
            <a class="nav-link fw-semibold @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-login" asp-page="./ExternalLogins">
                <i class="bi bi-box-arrow-in-right me-2"></i> Logins Externos
            </a>
        </li>
    }

    <li class="nav-item mb-2">
        <a class="nav-link fw-semibold @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
            <i class="bi bi-shield-lock-fill me-2"></i> Autenticação em Duas Etapas
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link fw-semibold @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <i class="bi bi-file-earmark-person-fill me-2"></i> Dados Pessoais
        </a>
    </li>
</ul>
