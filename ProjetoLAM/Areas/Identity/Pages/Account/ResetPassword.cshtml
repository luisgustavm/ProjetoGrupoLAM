@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f0f4ff;">
    <div class="card shadow-lg border-0 p-4" style="max-width: 500px; width: 100%;">
        <h1 class="text-center fw-bold text-primary mb-3">@ViewData["Title"]</h1>
        <p class="text-center text-muted mb-4">Informe seu e-mail e defina uma nova senha para acessar a Biblioteca Virtual.</p>

        <form method="post" class="d-grid gap-3">
            @Html.AntiForgeryToken()
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" placeholder="Nova senha" />
                <label asp-for="Input.Password">Nova Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="Confirme a nova senha" />
                <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg fw-bold">Redefinir Senha</button>
            <a asp-page="/Index" class="btn btn-outline-secondary btn-lg fw-bold">Voltar à Página Inicial</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
