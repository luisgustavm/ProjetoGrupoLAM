@model IEnumerable<ProjetoLAM.Models.Genero>

@{
    ViewData["Title"] = "Lista de Gêneros";
}

<div class="row justify-content-center py-5" style="min-height: 60vh; background-color: #f0f4ff;">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h1 class="text-center fw-bold text-primary mb-4">@ViewData["Title"]</h1>

                <div class="text-end mb-3">
                    <a asp-action="Create" class="btn btn-success btn-lg fw-bold">Adicionar Novo Gênero</a>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-dark text-center">
                            <tr>
                                <th>Nome do Gênero</th>
                                <th style="width: 300px;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-primary btn-sm me-1">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.GeneroId" class="btn btn-info btn-sm me-1">Detalhes</a>
                                        <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-danger btn-sm">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
