@model ProjetoLAM.Models.Livros

@{
    ViewData["Title"] = "Adicionar Livro";
}

<div class="row justify-content-center py-5" style="min-height: 80vh; background-color: #f0f4ff;">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4" style="background-color: #f0f4ff;">
                <h1 class="text-center fw-bold text-primary mb-3">@ViewData["Title"]</h1>
                <p class="text-center text-muted mb-4">Preencha os dados do livro para adicioná-lo à biblioteca virtual</p>

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Titulo" class="form-control form-control-lg" placeholder="Ex.: O Senhor dos Anéis" />
                        <label asp-for="Titulo">Título do Livro</label>
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Autor" class="form-control form-control-lg" placeholder="Ex.: J.R.R. Tolkien" />
                        <label asp-for="Autor">Autor</label>
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="AnoPublicacao" type="date" class="form-control form-control-lg" />
                        <label asp-for="AnoPublicacao">Ano de Publicação</label>
                        <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ISBN" class="form-control form-control-lg" placeholder="Ex.: 978-3-16-148410-0" />
                        <label asp-for="ISBN">ISBN</label>
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="GeneroId" class="form-label fw-semibold">Gênero</label>
                        <select asp-for="GeneroId" class="form-control form-control-lg" asp-items="ViewBag.GeneroId">
                            <option value="">-- Selecione o gênero --</option>
                        </select>
                        <span asp-validation-for="GeneroId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">Adicionar Livro</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg fw-bold">Voltar para a lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
