@model IEnumerable<ProjetoLAM.Models.Livros>

@{
    ViewData["Title"] = "Livros";
}

<div class="row justify-content-center py-5" style="min-height: 70vh; background-color: #f0f4ff;">
    <div class="col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h1 class="text-center fw-bold text-primary mb-4">Adicionar seu livro para nossa Bibioteca</h1>
                
                <div class="mb-4 text-end">
                    <a asp-action="Create" class="btn btn-primary btn-lg fw-bold">Adicionar Novo Livro</a>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                                <th>@Html.DisplayNameFor(model => model.Autor)</th>
                                <th>@Html.DisplayNameFor(model => model.AnoPublicacao)</th>
                                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                                <th>@Html.DisplayNameFor(model => model.Genero)</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AnoPublicacao)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Genero.Nome)</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.LivroId" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.LivroId" class="btn btn-sm btn-outline-secondary me-1">Detalhes</a>
                                        <a asp-action="Delete" asp-route-id="@item.LivroId" class="btn btn-sm btn-outline-danger">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
